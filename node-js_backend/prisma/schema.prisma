datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id            String         @id @unique @default(uuid())
  email         String         @unique
  password      String
  refreshTokens RefreshToken[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model RefreshToken {
  id          String   @id @unique @default(uuid())
  hashedToken String
  userId      String
  User        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  revoked     Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}



model BlueBird {
  id String @id @default(uuid())
  serial_number String 
  hostname String
  sector String
  contact_number String 

  @@map("bluebird")
}


model Computer{
  id String @id @default(uuid())
  hostname String 
  ip String  
  sector String
  operational_system String
  type String

  @@map("computer")
}

model Tas {
  id String @id @default(uuid())
  hostname String
  wifi_name String

  @@map("tas")
}

model Printer {
  id String @id @default(uuid())
  hostname String 
  ip String
  brand_and_model String
  queue_name String
  sector String
  toner_name String

  @@map("printer")
}

model Toner {
  id String @id @default(uuid())
  model String 
  quantity Int @default(0) 

  @@map("toner")
}